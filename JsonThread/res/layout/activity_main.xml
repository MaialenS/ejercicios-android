<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maialen.jsonthread.MainActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/btnDescargar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/descargar" />

    <Button
        android:id="@+id/btnDescargarManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDescargar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/manager" />

    <TextView
        android:id="@+id/textArchivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnDescargarManager"
        android:layout_marginTop="65dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
